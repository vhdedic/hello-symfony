<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Hello Symfony | {% block title %}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            
        {% endblock %}
    </head>
    <body>
        <nav class="p-3 bg-black text-white">
            <ul class="flex">
                <li>
                    <a class="inline px-3 py-1 font-extrabold" href="{{ path('app_post_index') }}">Hello Symfony</a>
                </li>
            {% if is_granted('ROLE_USER') %}
                <li>
                    <a class="inline px-3 py-1" href="{{ path('app_post_create') }}">Add New Post</a>
                </li>
                <li>
                    <a class="inline px-3 py-1" href="{{ path('app_logout') }}">Logout</a>
                </li>
            {% else %}
                <li>
                    <a class="inline px-3 py-1" href="{{ path('app_register') }}">Register</a>
                </li>
                <li>
                    <a class="inline px-3 py-1" href="{{ path('app_login') }}">Login</a>
                </li>
            {% endif %}
            </ul>
        </nav>
        <div class="container mx-auto py-3">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
