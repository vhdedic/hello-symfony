{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <h1 class="my-4">{{ post.title }}</h1>
    
    <span class="fw-bold">
        {{ post.user.username }} - {{ post.updated | ago }}
    </span>

    {% if app.user and app.user.id == post.user.id %}
        <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="text-decoration-none">
            edit
        </a>
    {% endif %}

    <p class="mt-2">{{ post.body }}</p>
    <hr />
    <h2 class="mb-4">Comments</h2>
    {% if comments|length > 0 %}
        {% for comment in comments %}
            <div class="border p-3 my-4">
                <span class="fw-bold">
                    {{ comment.user.username }} - {{ comment.created | ago }}
                </span>
                <p>{{ comment.body }}</p>
            </div>
        {% endfor %}
    {% else %}
       No comments yet.
    {% endif %}
    {% if app.user %}
        <div class="border p-3 my-4 bg-light">
            <p>Add New Comment</p>
            {{ form_start(form) }}
                {{ form_rest(form) }}
                <button type="submit" class="btn btn-success" formnovalidate>Save</button>
           {{ form_end(form) }}
        </div>
    {% endif %}
{% endblock %}
